@model List<App_v2.Models.Training>

@{
    ViewData["Title"] = "Lista treningów";
}


<div class="jumbotron">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <h4 class="lead col-md-6" style="font-size:1.5rem">Twoje rekordy siłowe w konkretnych ćwiczeniach</h4>
    <hr />
    <table class="table table-hover col-md-9">
        <thead>
            <tr class="table-active">
                <th scope="col">Nazwa Treningu</th>
                <th scope="col">Status</th>
                <th scope="col">Akcja</th>
            </tr>
            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    if (i % 2 == 0)
                    {
            <tr class="table-light">
                    <th scope="col">@Model[i].TrainingName</th>
                @if (Model[i].Active)
                {
                    <th scope="col">Aktywny</th>
                }
                else
                {
                    <th scope="col">Nieaktywny</th>
                }
                    <th scope="col">@Html.ActionLink("Podgląd", "ViewTraining", new { id = Model[i].ID })</th>
            </tr>
                    }
                    else
                    {
            <tr class="table-secondary">
                    <th scope="col">@Model[i].TrainingName</th>
                @if (Model[i].Active)
                {
                    <th scope="col">Aktywny</th>
                }
                else
                {
                    <th scope="col">Nieaktywny</th>
                }
                    <th scope="col">@Html.ActionLink("Podgląd", "ViewTraining", new { id = Model[i].ID })</th>
            </tr>
                    }
                }
            }
        </thead>

    </table>
    <div>
        <a asp-action="Index" asp-controller="Home">Powrót do strony głównej</a>
    </div>


</div>