@model App_v2.Models.PersonExcercise

@{
    ViewData["Title"] = "Edycja rekordu siłowego";
}


<div class="jumbotron">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <h4 class="lead col-md-6" style="font-size:1.5rem">Twoje rekordy siłowe w konkretnych ćwiczeniach</h4>
    <hr />
    <form asp-action="EditRecord" class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" style="display:none">
            <input asp-for="ID" class="form-control" />
        </div>
        <div class="form-group">
            @Html.LabelFor(x => Model.Max, "Maksymalna wartość", htmlAttributes: new { @class = "control-label lead" })
            <input asp-for="Max" class="form-control" type="number" step="2.5"/>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => Model.Progress, "Wskaźnik progresu", htmlAttributes: new { @class = "control-label lead" })
            <input asp-for="Progress" class="form-control" type="number"/>
        </div>

        <div class="form-group">
            <input type="submit" value="Zapisz" class="btn btn-primary" />
        </div>
    </form>

    <div>
        <a asp-action="Index">Powrót do strony głównej</a>
    </div>


</div>