@model App_v2.ViewModel.ViewHistoryViewModel

@{
    ViewData["Title"] = "Historia treningów";
}


<div class="jumbotron">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <hr />
    <table class="table table-hover col-md-9">
        <thead>
            <tr class="table-active">
                <th scope="col">Data treningu</th>
                <th scope="col">Akcja</th>
            </tr>
            @{
                for (int i = 0; i < Model.DateTimes.Count; i++)
                {
                    if (i % 2 == 0)
                    {
                        <tr class="table-light">
                            <th scope="col">@Model.DateTimes[i].ToShortDateString()</th>
                            <th scope="col">@Html.ActionLink("Podgląd", "ViewHistory", new { id = Model.SubtrainingId, date = Model.DateTimes[i].Date })</th>
                        </tr>
                    }
                    else
                    {
                        <tr class="table-secondary">
                            <th scope="col">@Model.DateTimes[i].ToShortDateString()</th>
                            <th scope="col">@Html.ActionLink("Podgląd", "ViewHistory", new { id = Model.SubtrainingId, date = Model.DateTimes[i].Date })</th>
                        </tr>
                    }
                }
            }
        </thead>

    </table>
    <div>
        <a asp-action="Index" asp-controller="Home">Powrót do strony głównej</a>
    </div>


</div>