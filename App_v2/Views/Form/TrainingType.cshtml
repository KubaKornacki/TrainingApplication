@model App_v2.ViewModel.TrainingTypeViewModel
@{
    ViewData["Title"] = "Generator trenigów";
}


<div class="jumbotron">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <h4 class="lead col-md-6" style="font-size:1.5rem">Utwórz swój własny plan treningowy</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="TrainingType">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.LabelFor(x => Model.TrainingTypeId, "Proponowane formy treningu", htmlAttributes: new { @class = "control-label lead" })
                    @Html.DropDownListFor(x => Model.TrainingTypeId, new SelectList(Model.TrainingTypes, "Value", "Text"), htmlAttributes: new { @class = "form-control col-md-6", id = "Goal" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => Model.TrainingKindId, "Rodzaje ćwiczeń", htmlAttributes: new { @class = "control-label lead" })
                    @Html.DropDownListFor(x => Model.TrainingKindId, new SelectList(Model.TrainingKinds, "Value", "Text"), htmlAttributes: new { @class = "form-control col-md-6", id = "FreeTime" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Wygeneruj" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Powrót do strony głównej</a>
    </div>


</div>
